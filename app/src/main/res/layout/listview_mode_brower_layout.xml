<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/brower_current_path"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:ellipsize="start"
        android:singleLine="true"
        android:layout_margin="@dimen/margin_size_5"
        android:background="@drawable/ic_launcher_background"
        app:layout_constraintDimensionRatio="10:1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.002"/>

    <ListView
        android:id="@+id/brower_listview_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/brower_current_path"
        app:layout_constraintBottom_toTopOf="@+id/brower_file_edit_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="1.0"></ListView>
    <ImageButton
        android:id="@+id/brower_file_edit_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@mipmap/ic_launcher"
        android:layout_margin="@dimen/margin_size_5"
        app:layout_constraintDimensionRatio="10:1"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>
